root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 80

[*.py]
max_line_length = 88

[*.js]
indent_size = 2

[*.html]
indent_size = 2
max_line_length = 120

[*.yaml]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.yml]
indent_size = 2
